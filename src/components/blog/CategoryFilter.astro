---
interface Props {
  categories: string[];
}

const { categories } = Astro.props;
---

<div class="flex flex-wrap gap-2" id="blog-filters" data-active-filter="all">
  <button
    type="button"
    class="blog-filter-btn rounded-full bg-accent-primary px-4 py-2 text-sm font-semibold text-white"
    data-filter="all"
  >
    Todos
  </button>
  {categories.map((category) => (
    <button
      type="button"
      class="blog-filter-btn rounded-full border border-border bg-bg-tertiary px-4 py-2 text-sm font-medium text-text-secondary transition hover:bg-bg-secondary hover:text-text-primary"
      data-filter={category}
    >
      {category}
    </button>
  ))}
</div>

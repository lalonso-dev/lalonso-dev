---
interface Props {
  label?: string;
  title: string;
  description?: string;
  align?: 'left' | 'center';
}

const { label, title, description, align = 'left' } = Astro.props;
const isCenter = align === 'center';
---

<div class={`mb-10 ${isCenter ? 'text-center' : 'text-left'}`} data-reveal>
  {label && (
    <p class="mb-2 text-[11px] font-semibold uppercase tracking-[0.2em] text-accent-primary">{label}</p>
  )}
  <h2 class="mb-3 font-heading text-3xl font-bold leading-tight sm:text-4xl">{title}</h2>
  {description && (
    <p class={`text-sm text-text-secondary sm:text-base ${isCenter ? 'mx-auto max-w-2xl' : 'max-w-2xl'}`}>
      {description}
    </p>
  )}
</div>

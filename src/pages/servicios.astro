const process = [
  {
    step: "01",
    title: "Descubrimiento",
    description:
      "Entiendo tu negocio, objetivos y necesidades específicas del proyecto.",
  },
  {
    step: "02",
    title: "Planificación",
    description:
      "Defino la arquitectura, stack tecnológico y plan de implementación detallado.",
  },
  {
    step: "03",
    title: "Desarrollo",
